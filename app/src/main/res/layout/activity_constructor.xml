<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/delagothicone"
        android:text="@string/const_test"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_name_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="28dp"
        android:text="Название теста: "
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_name_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/sourcesanspro_regular"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_vertical"
        android:hint="Название"
        android:selectAllOnFocus="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_add_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="25dp"
            android:text="Уникальный код: "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/code_here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="25dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_questions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="25dp"
        android:text="Количество вопросов: "
        android:textColor="@color/black"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_name_add2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edittext_border"
        android:fontFamily="@font/sourcesanspro_regular"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center_vertical"
        android:hint="Количество"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textSize="14sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="15dp"
            android:enabled="true"
            android:fontFamily="@font/delagothicone"
            android:text="@string/create"
            android:textAllCaps="false"
            android:textSize="10pt"
            app:cornerRadius="15dp"/>
    </LinearLayout>

</LinearLayout>